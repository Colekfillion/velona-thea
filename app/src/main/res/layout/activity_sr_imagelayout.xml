<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_sr_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image name"
        android:layout_toEndOf="@+id/activity_sr_imageview"/>

    <TextView
        android:id="@+id/image_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File name"
        android:textSize="13sp"
        android:layout_toEndOf="@id/activity_sr_imageview"
        android:layout_below="@+id/image_name"/>

    <TextView
        android:id="@+id/image_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="12sp"
        android:layout_toEndOf="@id/activity_sr_imageview"
        android:layout_below="@+id/image_filename"/>


</RelativeLayout>