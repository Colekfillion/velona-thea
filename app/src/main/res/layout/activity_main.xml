<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <EditText
            android:id="@+id/activity_main_searchbar"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/searchbar_hint"/>

        <Button
            android:id="@+id/activity_main_searchtagbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_tag" />

        <Button
            android:id="@+id/activity_main_searchtitlebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_title" />

        <Button
            android:id="@+id/activity_main_searchauthorbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_author" />

        <Button
            android:id="@+id/activity_main_loadbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_load" />

        <Button
            android:id="@+id/activity_main_debugbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_debug" />

</LinearLayout>