<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <include layout="@layout/toolbar"/>

        <EditText
            android:id="@+id/activity_main_et_title_search"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/image_title"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/activity_main_et_author_search"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/author_name"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/activity_main_et_tag_search"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tag_like"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/activity_main_btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/activity_main_swtch_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/random_order"/>


</LinearLayout>