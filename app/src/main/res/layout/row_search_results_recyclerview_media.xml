<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_search_results_imgv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/activty_search_results_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/activity_search_results_imgv"
        android:text="Image name"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/activty_search_results_tv_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activty_search_results_tv_name"
        android:layout_toEndOf="@id/activity_search_results_imgv"
        android:text="File name"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/activty_search_results_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activty_search_results_tv_filename"
        android:layout_toEndOf="@id/activity_search_results_imgv"
        android:text="Author"
        android:textSize="12sp" />

</RelativeLayout>