<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MediaIndexActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SauceNAO API key"/>

    <EditText
        android:id="@+id/activity_media_index_et_apikey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum similarity"/>

    <EditText
        android:id="@+id/activity_media_index_et_minsim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <Button
        android:id="@+id/activity_media_index_btn_execute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute"/>

    <ProgressBar
        android:id="@+id/activity_media_index_pb_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:max="100"/>

    <TextView
        android:id="@+id/activity_media_index_tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:visibility="gone"/>

</LinearLayout>