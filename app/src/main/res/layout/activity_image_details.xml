<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageDetailsActivity">

    <EditText
        android:id="@+id/activity_image_details_et_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File name"
        android:hint="File name"
        android:importantForAutofill="no"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_image_details_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image name"
        android:hint="Image name"
        android:importantForAutofill="no"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_image_details_et_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author"
        android:hint="Author"
        android:importantForAutofill="no"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_image_details_et_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link"
        android:hint="Link"
        android:importantForAutofill="no"
        android:inputType="text"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/activity_image_details_btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_gravity="end"/>

</LinearLayout>